<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}eDB{% endblock %}</title>
        {% block stylesheets %}
            <link rel='stylesheet' href='{{ asset('css/site.css') }}' />
            <link rel='stylesheet' href='{{ asset('css/edb.css') }}' />
            <link rel='stylesheet' href='{{ asset('js/jquery.fancybox-1.3.4/jquery.fancybox-1.3.4.css') }}' />
            <link rel='stylesheet' href='{{ asset('js/aloha/aloha/css/aloha.css') }}' />
            <link rel='stylesheet' href='{{ asset('js/Jcrop/css/jquery.Jcrop.min.css') }}' />
            <link rel='stylesheet' href='{{ asset('bundles/aehpartaform/css/site-form.css') }}' />
            <link rel='stylesheet' href='{{ asset('bundles/edbbrowser/css/bundle.css') }}' />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

        <script src="{{ asset('js/aloha/aloha/lib/require.js') }}"></script>
        <script src="{{ asset('js/jquery-1.7.2.js') }}"></script>
        <script src="{{ asset('js/jquery-ui/jquery-ui-1.9.2.custom.min.js') }}"></script>
        <script src="{{ asset('js/aloha/aloha/lib/aloha-bare.js') }}"
            data-aloha-plugins="
                common/ui,
                common/format,
                common/highlighteditables,
                common/link,
                common/image,
                common/align,
                common/block,
                common/format,
                common/horizontalruler,
                common/list,
                common/paste,
                common/table,
                common/undo,
                extra/formatlesspaste
                ">
        </script>
        <script src="{{ asset('js/jquery.history.js') }}"></script>
        <script src="{{ asset('js/uploadify-3.1.1/jquery.uploadify-3.1.min.js') }}"></script>
        <script src="{{ asset('js/jquery.fancybox-1.3.4/jquery.fancybox-1.3.4.pack.js') }}"></script>
        <script src="{{ asset('js/Jcrop/js/jquery.Jcrop.min.js') }}"></script>
<!--        <script src="{{ asset('js/ckeditor/ckeditor.js') }}"></script> -->

        <script src="{{ asset('bundles/aehpartaform/js/site-form.js') }}"></script>
        <script src="{{ asset('bundles/edbbrowser/js/edb-form.js') }}"></script>
        <script src="{{ asset('bundles/edbbrowser/js/bundle.js') }}"></script>
        <script src="{{ asset('js/site.js') }}"></script>
    </head>
    <body>
        {% block body %}
        <div id='site-body'>
            <div id='site-header'>
                {% if is_granted('ROLE_USER') %}
                    <div id='site-login'><a href=''><img class='icon' src='{{ asset('/images/coquette/16x16/user.png') }}' />{{ app.user.username }}</a></div>
                {% endif %}
                <table id='site-navi'><tr>
                    <td><a href='{{ path('EDBFrontpageBundle_index') }}'><img src='{{ asset('images/home.png') }}' /></a></td>
                    <td><a title="Browse" href='{{ path('EDBFrontpageBundle_browse') }}'><img src='{{ asset('images/coquette/32x32/folder.png') }}' /><span>Browse</span></a></td>
                    {% if is_granted('ROLE_USER') %}
                        <td><a title="Stock" href='{{ path('EDBFrontpageBundle_stock') }}'><img src='{{ asset('images/coquette/32x32/chart.png') }}' /><span>Stock</span></a></td>
                        <td><a title="Logout" href='{{ path('AehpartaSecurityBundle_logout') }}'><img src='{{ asset('images/coquette/32x32/user.png') }}' /><span>Logout</span></a></td>
                    {% else %}
                        <td><a title="Login" href='{{ path('AehpartaSecurityBundle_login') }}'><img src='{{ asset('images/coquette/32x32/user.png') }}' /><span>Login</span></a></td>
                    {% endif %}
                </tr></table>
            </div>
            <div id='site-content-div'>
                <div id='page-content'>
<!--                        <div class='editable-tools'>
                            <button class='site-form-button editable-tools-mode-start editable-tools-edit' type='button'>Edit</button>
                            <button class='site-form-button editable-tools-mode-edit editable-tools-save' type='button'>Save</button>
                            <button class='site-form-button editable-tools-mode-edit editable-tools-stop' type='button'>Stop</button>
                        </div>-->
                        {% block content %}{% endblock %}
                </div>
            </div>
        </div>
        {% endblock %}
    </body>
</html>
